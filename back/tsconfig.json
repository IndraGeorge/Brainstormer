{
    "compilerOptions": {
      "outDir": "dist",
      "target": "ES2022",
      "module": "ESNext",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "sourceMap": true,
      "noImplicitAny": true,
      "esModuleInterop": true
    },
    "ts-node":{
      "esm": true
    },
  
    "include": ["**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }
  